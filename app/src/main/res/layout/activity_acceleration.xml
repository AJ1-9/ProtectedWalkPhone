<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="b.daichimizuno.protectedwalkphone.acceleration.AccelerationActivity">

    <TextView
        android:id="@+id/sensorX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sensorX" />

    <TextView
        android:id="@+id/sensorY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sensorY" />

    <TextView
        android:id="@+id/sensorZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sensorZ" />

    <TextView
        android:id="@+id/text_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text="textinfo" />
</LinearLayout>
